<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="author" content="laoziwubo" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Laoziwubo</title>
    <link href="/css/base.css?v=@Guid.NewGuid()" rel="stylesheet" />
    <link href="/css/pace-theme-flash.css" rel="stylesheet" />
    <link href="/css/nav.css" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", false)
    <script>
        var _hmt = _hmt || [];
        (function () {
            var hm = document.createElement("script");
            hm.src = "https://hm.baidu.com/hm.js?99f5588be79f99b60bc3539b95765f03";
            var s = document.getElementsByTagName("script")[0];
            s.parentNode.insertBefore(hm, s);
        })();
    </script>
</head>
<body>
    <a id="a-nav" href="javascript:void(0);">
        <span></span>
    </a>
    <div id="div-mask" class="hide"></div>
    <div id="sb-container" class="sb-container hide">
        <div>
            <span class="sb-icon">
                <img class="w100p h100p" src="~/images/nav/nav-1.png" />
            </span>
            <a href="/"><h4><span>去首页</span></h4></a>
        </div>
        <div>
            <span class="sb-icon"></span>
            <h4><span>逛图集</span></h4>
        </div>
        <div>
            <span class="sb-icon"></span>
            <a href="/#section-upload"><h4><span>传图片</span></h4></a>
        </div>
        <div>
            <span class="sb-icon"></span>
            <a href="#"><h4><span>先空为敬</span></h4></a>
        </div>
        <div>
            <h4><span>Menu</span></h4>
            <span class="sb-toggle">展开/关闭菜单</span>
            <h5><span>玩的开心</span></h5>
        </div>
    </div>

    @RenderBody()

    <script src="/js/jquery-2.1.4.min.js"></script>
    <script src="/layui/layui.js"></script>
    <script src="/js/pace.min.js"></script>
    <script src="/js/modernizr.min.js"></script>
    <script src="/js/jquery.swatchbook.js"></script>
    <script type="text/javascript">
        $(function () {

            $("#a-nav").click(function () {
                $(this).toggleClass("nav-show");
                $('#sb-container').toggleClass("show");
                $('#div-mask').toggleClass("show");
            });

            $("#div-mask").click(function () {
                $(this).toggleClass("show");
                $('#sb-container').toggleClass("show");
                $('#a-nav').toggleClass("nav-show");
            });

            $('#sb-container').swatchbook({
                // index of initial centered item
                center: 2,
                // number of degrees that is between each item
                angleInc: -25,
                speed: 700,
                easing: 'ease',
                // amount in degrees for the opened item's next sibling
                proximity: -60,
                // amount in degrees between the opened item's next siblings
                neighbor: -15,
                // animate on load
                onLoadAnim: true,
                // if it should be closed by default
                initclosed: false,
                // index of the element that when clicked, triggers the open/close function
                // by default there is no such element
                closeIdx: 4
                // open one specific item initially (overrides initclosed)
                //openAt: 2
            });
        });
    </script>
    @RenderSection("Scripts", false)
</body>
</html>
